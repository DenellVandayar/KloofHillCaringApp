<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ForgotPasswordPage">

    <!-- Top-left background circle -->
    <View
        android:id="@+id/topLeftCircle"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/white_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="-100dp"
        android:translationY="-100dp" />

    <!-- Bottom-right background circle -->
    <View
        android:id="@+id/bottomRightCircle"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/white_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="100dp"
        android:translationY="100dp" />

    <!-- Top-left hands holding -->
    <ImageView
        android:id="@+id/topLeftHands"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/handsholding1"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="-96dp"
        android:translationY="-96dp"
        android:rotation="-10"/>

    <!-- Bottom-right hands holding -->
    <ImageView
        android:id="@+id/bottomRightHands"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/handsholding2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="96dp"
        android:translationY="96dp"
        android:rotation="0" />

    <!-- Centered container for all content -->
    <LinearLayout
        android:id="@+id/centerContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville_sc"
            android:text="Kloofhill Caring"
            android:textColor="#0A3161"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Forgot Password Heading -->
        <TextView
            android:id="@+id/forgotPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trouble logging in?"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/forgotPasswordSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your email address"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@android:color/white"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Info Text -->
        <TextView
            android:id="@+id/infoText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="An email will be sent to the following email address with a reset password link"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Reminder to check Junk/Spam folder -->
        <TextView
            android:id="@+id/spamNote"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tip: If you donâ€™t see the email soon, please check your Junk or Spam folder."
            android:textColor="#5A7DFF"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />


        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:text="Continue"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:backgroundTint="#0A3161"/>

        <!-- Return to Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/returnLoginButton"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="Return to Login Page"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:backgroundTint="#5A7DFF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
