<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reserveItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/reserveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reserve Equipment"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/baskervville_sc"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/backArrow"/>

        <ScrollView
            android:id="@+id/cardScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/backArrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Card Border Wrapper -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/card_border_blue"
                    android:padding="2dp">

                    <!-- Card Content -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/itemCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/itemImage"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="Item Image"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:id="@+id/itemName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Item Name"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#0A3161"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/itemPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R100 per month"
                                android:textSize="16sp"
                                android:textColor="#5E81F5"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/itemAvailability"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available"
                                android:textStyle="bold"
                                android:textColor="#0DA13C"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#D1D1D1"
                                android:layout_marginVertical="12dp"/>

                            <TextView
                                android:id="@+id/commentLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Please give us an estimated day we can expect to see you:"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:gravity="center"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/commentInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="#000000"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeWidth="2dp"
                                app:boxStrokeWidthFocused="2dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/commentEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter your comment here"
                                    android:inputType="textMultiLine"
                                    android:minLines="2"
                                    android:maxLines="3"
                                    android:textSize="14sp"
                                    android:padding="8dp"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/npoGuidanceText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Our team will guide you through all the equipment options when you arrive to find the best one for you."
                                android:textColor="#5A7DFF"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/reserveBtn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:text="Reserve"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:layout_marginTop="16dp"
                                app:cornerRadius="16dp"
                                app:icon="@drawable/reserved"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                app:iconTint="@android:color/white"
                                app:backgroundTint="#5A7DFF"
                                app:elevation="6dp"
                                app:rippleColor="#4DFFFFFF"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
